{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Elasticsearch"],
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "Rk": "Debug"
      }
    },
    "Properties": {
      "ServiceName": "Rk.AccountService.WebApi"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "./logs/webapi-.log",
                "rollingInterval": "Day",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{ServiceName}] [{Level}] {CorrelationId} {Message:lj} {UserName} {ActionName} {NewLine} {Exception}"
              }
            }
          ]
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{ServiceName}] [{Level}] {CorrelationId} {Message:lj} {UserName} {ActionName} {NewLine} {Exception}"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "dev-{0:yyyy.MM.dd}",
          "minimumLogEventLevel": "Verbose",
          "connectionTimeout": 5,
          "emitEventFailure": "WriteToSelfLog",
          "deadLetterIndexName": "deadletter-{0:yyyy.MM}",
          "registerTemplateFailure": "IndexAnyway",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{ServiceName}] [{Level}] {CorrelationId} {Message:lj} {UserName} {ActionName} {NewLine} {Exception}"
        }
      }
    ]
  },
  "Oidc":{
    "Realm" : "Template",
    "ClientId" : "template_api",
    "GrantType" : "password",
    "AdminUserName" : "realm_admin",
    "AdminPassword" : "5hBkIwHufeK0QaSVAP",
    "BaseUrl" : "https://auth.roscosmos.digital"
  }
}
